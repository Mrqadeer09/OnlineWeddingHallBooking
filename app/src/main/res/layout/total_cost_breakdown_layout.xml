<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_12sdp"
    android:nestedScrollingEnabled="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/_41sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:text="1x"
                android:background="@drawable/relative_layout_with_border"
                android:padding="@dimen/_4sdp"
                android:id="@+id/cateringQuantityTV"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:scaleType="centerCrop"
            android:id="@+id/dishIV"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_2sdp">

            <TextView
                android:layout_width="@dimen/_105sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:text="Dish Name"
                android:padding="@dimen/_4sdp"
                android:id="@+id/dishNameTV"
                android:layout_marginLeft="@dimen/_8sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_2sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:text="Rs. 120000"
                android:padding="@dimen/_4sdp"
                android:id="@+id/dishPriceTV"
                android:gravity="left"
                android:layout_marginLeft="@dimen/_2sdp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>